@model MVCVSMobile.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Thông tin chi tiết</h2>

<div>    
	<hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Hãng sản xuất:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductCategory.Name)
        </dd>

        <dt>
            Ảnh bìa:
        </dt>

        <dd>
            <img src="@Url.Content("~/Demo/Hinhanh/Products/" + Model.Image)" width="120px" />
        </dd>

        <dt>
            Giá:
        </dt>

        <dd>
           @String.Format("{0:0,0}", Model.Price) VNĐ
        </dd>

        <dt>
            Giá khuyến mãi:
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.PromotionPrice) VNĐ
        </dd>

        <dt>
            Số lượng tồn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt>
            Mô tả:
        </dt>

        <dd style="width:600px; text-align:justify">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Chi tiết:
        </dt>

        <dd style ="width:600px; text-align:justify">
            @Html.DisplayFor(model => model.Detail)
        </dd>

        <dt>
            Kích thước:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}",Model.CreatedDate)
        </dd>
        <dt>
            Tình trạng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Quay về danh mục", "/Product")
</p>
