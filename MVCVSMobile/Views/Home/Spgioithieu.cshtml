@model IEnumerable<MVCVSMobile.Models.Product>
@foreach(var item in Model)
{
<div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
    <!-- Item -->

    <div class="item">

        <div class="col-item">

            <div class="product-image-area">
                <a class="product-image" title="@item.Name" href="@Url.Action("Chitiet", "Chitietsanpham", new  {id=@item.ID })">
                    <img src="~/Demo/Hinhanh/Products/@item.Image" alt="@item.Name" />
                </a>
            </div>
            <div class="info">
                <div class="info-inner">
                    <div class="item-title"><a title="@item.Name" href="@Url.Action("Chitiet", "Chitietsanpham", new  {id=@item.ID })"><h3>@item.Name</h3></a></div>
                    <!--item-title-->
                    <div class="item-content">
                        <div class="price-box">


                            <p class="special-price"> <span class="price"> @string.Format("{0:0,0}", item.Price)₫ </span> </p>


                        </div>
                    </div>
                    <!--item-content-->
                </div>
                <!--info-inner-->
                <div class="actions">
                    <br />
                    <a title="Mua hàng" class="button btn-cart" href="@Url.Action("Themgiohang", "Giohang", new {@iMadt =@item.ID,@strURL=Request.Url.ToString()})"><span>Mua hàng</span></a>
                </div>
                <!--actions-->
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <!-- End Item -->
</div>
}