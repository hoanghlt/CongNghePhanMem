@model MVCVSMobile.Models.New

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>Thông tin chi tiết</h2>

<div>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            Tiêu đề 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            <img src="@Url.Content("~/Demo/Hinhanh/" + Model.Image)" width="120px" />
        </dd>

        <dt>
            Chi tiết
        </dt>

        <dd style="width:600px; text-align:justify">
            @Html.DisplayFor(model => model.Detail)
        </dd>

        <dt>
            Ngày đăng
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.CreatedDate)
        </dd>

        <dt>
            Người đăng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

        <dt>
            Ngày cập nhật
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.UpdateDate)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Quay về", "Index")
</p>
