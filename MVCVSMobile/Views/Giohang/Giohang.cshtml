@using MVCVSMobile.Models;
@model List<Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@if (Model.Count > 0)
{   <section class="main-container col1-layout">
	<div class="main container">
		<div class="col-main">
    <div class="cart wow bounceInUp animated">

    <div class="table-responsive">
        <form method="post" action="">
            <fieldset>
                <table class="data-table cart-table" id="shopping-cart-table">
                    <thead>
                        <tr class="first last">
                            <th rowspan="1">&nbsp;</th>
                            <th rowspan="1"><span class="nobr">Tên sản phẩm</span></th>
                            <th colspan="1" class="a-center"><span class="nobr">Giá</span></th>
                            <th class="a-center" rowspan="1">Số lượng</th>
                            <th colspan="1" class="a-center">Thành tiền</th>
                            <th class="a-center" rowspan="1">&nbsp;</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr class="first last">
                            <td class="a-right last" colspan="7">
                                <a href="/Home/Index" class="button btn-continue" title="Tiếp tục mua sắm" type="button">
                                    <span><span>Tiếp tục mua sắm</span></span>
                                </a>                              
                                <button class="button btn-update" title="Xóa giỏ hàng">
                                    <span>@Html.ActionLink("Xóa giỏ hàng", "Xoatatcagio")
                                     </span>
                                </button>
                            </td>
                        </tr>
                    </tfoot>
                 
                            <tbody>
                                @foreach (var item in Model)
                                {
                                 <tr class="first odd">
                                @using (Html.BeginForm("Capnhatgiohang","Giohang", new { @isp = item.iMadt }))
                                {
                                <td><img width="80" src="~/Demo/Hinhanh/Products/@item.sAnhbia" /></td>
                                <td><a href="@Url.Action("Details", "Home", new { id=item.iMadt})"> @item.sTendt</a></td>
                             
                                <td>@String.Format("{0:0,0}", item.dDongia)</td>
                           
                                <td><input type="number" min="1" name="txtSoluong" value="@item.iSoluong" /></td>
                                <td>@String.Format("{0:0,0}", item.dThanhtien)</td>
                              
                                     <td class="a-center last">
                                <input type="submit" value="Cập nhật"/>
                               
                                </td>                                                              
                                }
                                  <td class="a-center last">
                                         @Html.ActionLink("Xóa", "Xoagiohang", new { @isp = item.iMadt })

                                 </td>
                            </tr>
}
                        </tbody>
                   
                </table>
            </fieldset>
        </form>
    </div>

    <!-- BEGIN CART COLLATERALS -->
    <div class="cart-collaterals row">
        <div class="totals col-sm-offset-8 col-sm-4">
            <h3>Tổng tiền giỏ hàng: </h3>
            <div class="inner">
                <table class="table shopping-cart-table-total" id="shopping-cart-totals-table">
                    <tbody>
                        <tr>
                            <td colspan="4" class="a-left"> Tổng số lượng </td>
                            <td class="a-right pull-right"><span class="number"></span>@ViewBag.Tongsoluong</td>
                        </tr>
                        <tr>
                            <td colspan="4" class="a-left"> Tổng tiền </td>
                            <td class="a-right pull-right"><span class="price"></span>@String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ</td>
                        </tr>
                    </tbody>
                </table>
                <ul class="checkout">
                    <li>
                        <button class="button btn-proceed-checkout" title="Thực hiện thanh toán" onclick="window.location.href='/Giohang/Dathang'"><span>Thực hiện thanh toán</span></button>
                    </li>
                </ul>
            </div>
            <!--inner-->
        </div>
    </div>
    <!--cart-collaterals-->
</div>
            </div>
        </div>
    </section>

}
else
{ 
    <div class="page-title">
    <br/>
    <h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
    <br/>
   <div class="alert alert-danger" role="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <span class="sr-only">Error:</span>
  Không có sản phẩm trong giỏ hàng
</div>
  </div>
}